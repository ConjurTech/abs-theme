  <script>
  if ($(window).width() > 768) {
    $("#desktop-nav").show();
  } else {
    $("#sidebar").show();
  }
  $( window ).resize(function() {
    if ($(window).width() >= 768) {
      $("#desktop-nav").show();
      $("#sidebar").hide();
    } else {
      $("#desktop-nav").hide();
      $("#sidebar").show();
    }
  });
  </script>
