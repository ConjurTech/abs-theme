<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>
  <title>
    {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>
  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}
  <link rel="canonical" href="{{ canonical_url }}" />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  {% include 'facebook-open-graph' %}
  {% include 'twitter-cards' %}
  <link href='//fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
  {% if settings.header_font contains "PT Serif" or settings.body_font contains "PT Serif" %}
  <link href='//fonts.googleapis.com/css?family=PT+Serif' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Source Sans Pro" or settings.body_font contains "Source Sans Pro" %}
  <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:600' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Cabin" or settings.body_font contains "Cabin" %}
  <link href='//fonts.googleapis.com/css?family=Cabin:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Open Sans Condensed" or settings.body_font contains "Open Sans Condensed" %}
  <link href='//fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Karla" or settings.body_font contains "Karla" %}
  <link href='//fonts.googleapis.com/css?family=Karla:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Work Sans" or settings.body_font contains "Work Sans" %}
  <link href='//fonts.googleapis.com/css?family=Work+Sans:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Roboto" or settings.body_font contains "Roboto" %}
  <link href='//fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Lora" or settings.body_font contains "Lora" %}
  <link href='//fonts.googleapis.com/css?family=Lora:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {% if settings.header_font contains "Arimo" or settings.body_font contains "Arimo" %}
  <link href='//fonts.googleapis.com/css?family=Arimo:400,700' rel='stylesheet' type='text/css'>
  {% endif %}
  {{ 'theme.scss.css' | asset_url | stylesheet_tag }}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
  {{ 'custom-theme.scss.css' | asset_url | stylesheet_tag }}
  {{ 'modernizr.min.js' | asset_url | script_tag }}
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  {{ 'jquery.fancybox.js' | asset_url | script_tag }}
  {% if template contains "product" %}
  <script src="{{ 'jquery.zoom.min.js' | asset_url }}" type="text/javascript"></script>
  {% endif %}
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"></script>
  <![endif]-->
  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}
  <!--[if lt IE 8]>
  {{ 'json2.js' | shopify_asset_url | script_tag }}
  <![endif]-->
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  <script> Shopify.money_format = "{{ shop.money_format }}";</script>
  {{ 'jquery.theme.js' | asset_url | script_tag }}
  {{ 'custom-theme.js' | asset_url | script_tag }}
  {{ content_for_header }}
</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  <div id="cart-animation">1</div>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=1743713679100277";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  {% if settings.cart_type == 'drawer' %}
  <!--START DRAWER-->
  <div id="drawer">
    <div class="">
      {% if cart.item_count > 0 %}
      <form action="/cart" method="post" name="cartform">
        {% for item in cart.items %}
        <!-- START ROW-->
        <div class="row {% if forloop.first %}first{% endif %}">
          <div class="nine columns description">
            <img src="{{ item | img_url: 'compact' }}" alt="{{ item.title | escape }}" />
            <div class="info">
              <h3>
                <a href="{{ item.url | within: collections.all }}">
                  {{ item.title }}
                  {% if item.product.variants.size == 1 %}
                  {% unless item.variant.title contains 'Default' %}
                  - {{ item.variant.title }}
                  {% endunless %}
                  {% endif %}
                </a>
              </h3>
              <h4>{{ item.vendor }}</h4>
              <p>{{ item.product.description | strip_html | truncatewords: 20 }}</p>
              <p class="mobile">{{ item.quantity }} x {{ item.price | money }}</p>
            </div>
          </div>
          <div class="two columns price desktop">
            {{ item.price | money }}
          </div>
          <div class="two columns quantity desktop">
            <input type="text" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" />
          </div>
          <div class="two columns total desktop">
            {{ item.line_price | money }}
          </div>
          <div class="one column remove desktop">
            <a href="/cart/change?line={{ forloop.index }}&quantity=0" class="removeLine" rel="{{ item.variant.id }}">{{ 'cart.general.remove' | t }}</a>
          </div>
        </div>
        <!-- END ROW-->
        {% endfor %}
        <!-- START ACTIONS -->
        <div class="actions">
          <input type="submit" id="update" name="update" value="{{ 'cart.general.update' | t }}" />
          <input type="submit" value="{{ 'cart.general.check_out' | t }}" />
        </div>
        <!-- END ACTIONS -->
      </form>
      {% else %}
      <div class="sixteen columns description">
        <p class="empty">{{ 'cart.general.empty_cart_drawer_message' | t }}</p>
      </div>
      {% endif %}
    </div>
  </div>
  <!--END DRAWER-->
  {% endif %}
  <!--START HEADER-->
  <header>
    <!--START CONTAINER-->
    <div class="container-fluid" id="desktop-nav" style="display: none;">
      <div class="row">
        <div class="col-sm-offset-1 col-sm-1">
          <a href="/">
            {% if settings.use_logo %}
            {{ 'logo.png' | asset_url | img_tag: shop.name }}
            {% else %}
            <span class="no-logo">{{ shop.name }}</span>
            {% endif %}
          </a>
        </div>
        <div class="col-sm-8" id="nav-link-container">
          <nav>
            <a href="/#">Home</a>
            <a href="/pages/brands">Brands</a>
            <a href="/pages/new">What's New</a>
            <a href="/collections/bestsellers">Bestsellers</a>
            <a href="/pages/events">Events and Promotions</a>
            <a href="/pages/reviews">Reviews</a>
            <a href="/pages/boutiques">Boutiques</a>
            <a href="/pages/awards">Awards</a>
          </nav>
        </div>
        <div class="col-sm-2 minicart-wrapper">
          <a href="/cart" class="cart-target"><img src="{{ 'shopping-bag.png' | asset_url }}" class="img-responsive"/></a>
        </div>
      </div>
    </div>

    <!--END CONTAINER-->

    <!--START CONTAINER-->
  </header>
    <!--START HEADER-->
  <!--START CONTAINER-->
  <!--START SIDEBAR-->
  <div id="sidebar" class="three columns" style="display: none;">
    <nav>
      <a href="#" id="toggle-menu" class="mobile"><span>{{ 'layout.general.menu_title' | t }}</span></a>
      <ul id="main-menu" class="accordion">
        <li><a href="/#">Home</a></li>
        <li><a href="/pages/brands">Brands</a></li>
        <li><a href="/pages/new">What's New</a></li>
        <li><a href="/collections/bestsellers">Bestsellers</a></li>
        <li><a href="/pages/events">Events and Promotions</a></li>
        <li><a href="/pages/reviews">Reviews</a></li>
        <li><a href="/pages/boutiques">Boutiques</a></li>
        <li><a href="/pages/awards">Awards</a></li>
        <li><a href="/cart" class="cart mobile {% if settings.light_cart_icon %}light{% endif %}">{{ 'layout.general.header_cart_title' | t }}<span class="count cart-target"> ({{ cart.item_count }})</span></a></li>
        {% if shop.customer_accounts_enabled %}
        {% if customer %}
        <li class="mobile"><a href="/account">{{ 'customer.account.your_account' | t }}</a></li>
        <li class="mobile">{{ 'customer.account.log_out' | t | customer_logout_link }}</li>
        {% else %}
        <li class="mobile">{{ 'customer.account.log_in' | t | customer_login_link }}</li>
        {% if shop.customer_accounts_optional %}
        <li class="mobile">{{ 'customer.account.create_account' | t | customer_register_link }}</li>
        {% endif %}
        {% endif %}
        {% endif %}
      </ul>
    </nav>
  </div>
  <script>
  if ($(window).width() >= 768) {
    $("#desktop-nav").show();
  } else {
    $("#sidebar").show();
  }
  $( window ).resize(function() {
    if ($(window).width() >= 768) {
      $("#desktop-nav").show();
      $("#sidebar").hide();
    } else {
      $("#desktop-nav").hide();
      $("#sidebar").show();
    }
  });
  </script>
  <!--END SIDEBAR-->

    <!--START MAIN-->
    <div id="main">
      <!-- main header  -->
      {% if template != 'index' %}
      <div class="main-header-container">
        <div class="title">
          {% if template contains "page" %}
            {{ page.title }}
          {% endif %}
          {% if template contains "product" %}
            {{ product.collections.first.title }}
          {% endif %}
          {% if template contains "collection" %}
            {{ collection.title }}
          {% endif %}
          {% if template contains "cart" %}
            {{ 'cart.general.title' | t }}
          {% endif %}
        </div>
        <div class="subtitle">FOR NIPPON BEAUTY</div>
        <div class="top-border"></div><div class="bottom-border"></div>
      </div>
      <div id="product-search" class="hidden-xs">
        <form action="/search" method="get" class="search-form" role="search">
            <input type="hidden" name="type" value="product" />
            {% if template == "search" and search.performed and search.terms != "" %}
            <input type="text" name="q" id="search-field" class="search" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.search_form_submit' | t }}"/>
            {% else %}
            <input class="search" placeholder="{{ 'general.search.search_form_submit' | t }}" name="q" type="text" id="search-field"  />
            <input type="submit" id="search-submit" class="icon {% if settings.light_search_icon %}light{% endif %}" />
          {% endif %}
        </form>
      </div>
      {% endif %}
      <div id="page-content">
        {{ content_for_layout }}
        <br class="clear">
      </div>
    </div>
    <!--END MAIN-->

    <!--START FOOTER-->
    {% if template != 'index' %}
    <footer>
      <div class="container">
        <section class="upper">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <div id="mailing-list">
                <h2>{{ 'layout.footer.mailing_list_title' | t }}</h2>
                {% if settings.mailchimp_form_action.size > 0 %}
                <form action="{{ settings.mailchimp_form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
                  <!--<label>{{ 'layout.footer.mailing_list_label' | t }}</label>-->
                  <input type="email" placeholder="{{ 'layout.footer.mailing_list_placeholder' | t }}" name="EMAIL" id="email-input" />
                  <input type="submit" value="{{ 'layout.footer.mailing_list_submit' | t }}" id="email-submit" />
                </form>
                {% else %}
                <form id="email-alerts-footer" class="mailing-list" action="/contact" method="post">
                  <input type="hidden" value="customer" name="form_type">
                  <span class="success"><em>{{ 'layout.footer.mailing_list_success_message' | t }}</em></span>
                  <input type="hidden" id="contact_tags" name="contact[tags]" value="prospect,mailing-list" />
                  <input type="hidden" id="mailinglist-first-name" name="contact[first_name]" value="Subscriber" />
                  <input type="hidden" id="mailinglist-last-name" name="contact[last_name]" value="Mailing List" />
                  <!--<label>{{ 'layout.footer.mailing_list_label' | t }}</label>-->
                  <input type="email" placeholder="{{ 'layout.footer.mailing_list_placeholder' | t }}" name="contact[email]" id="email-input" class="required email" />
                  <input type="submit" value="{{ 'layout.footer.mailing_list_submit' | t }}" class="button secondary" name="subscribe" id="email-submit" />
                </form>
                {% endif %}
              </div>
            </div>
            <div class="col-xs-12 col-sm-8">
              <div class="inline-list social-icons">

                {% if settings.snapchat_url != blank %}
                <span>
                  <a class="icon-fallback-text" href="{{ settings.snapchat_url }}" target="_blank" title="{{ shop.name }} on Snapchat">
                    <img alt="Instagram" src={{'logo_snapchat.png' | asset_url}}>
                  </a>
                </span>
                {% endif %}

                {% if settings.youtube_url != blank %}
                <span>
                  <a class="icon-fallback-text" href="{{ settings.youtube_url }}" target="_blank" title="{{ shop.name }} on Youtube">
                    <img alt="Instagram" src={{'logo_youtube.png' | asset_url}}>
                  </a>
                </span>
                {% endif %}

                {% if settings.facebook_url != blank %}
                <span>
                  <a class="icon-fallback-text" href="{{ settings.facebook_url }}" target="_blank" title="{{ shop.name }} on Facebook">
                    <img alt="Instagram" src={{'logo_facebook.png' | asset_url}}>
                  </a>
                </span>
                {% endif %}

                {% if settings.instagram_url != blank %}
                <span>
                  <a class="icon-fallback-text" href="{{ settings.instagram_url }}" target="_blank" title="{{ shop.name }} on Instagram">
                    <img alt="Instagram" src={{'logo_instagram.png' | asset_url}}>
                  </a>
                </span>
                {% endif %}

              </div>
            </div>
          </div>
        </section>
        <section class="lower">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              {% if linklists.footer.links.size > 0 %}
              <nav>
                {% for link in linklists.footer.links %}
                <a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
                {% endfor %}
              </nav>
              {% endif %}
            </div>
            <div class="col-xs-12 col-sm-8">
              <div class="legals">
                {% assign current_year = 'now' | date: '%Y' %}
                {{ 'layout.copyright.copyright_html' | t: year: current_year }}
              </div>
            </div>
          </div>
        </section>
      </div>
    </footer>
    {% endif %}
    <!--END FOOTER-->
  <!-- END CONTAINER-->
</body>

</html>
