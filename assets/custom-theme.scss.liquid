$light-pink: #f3afc5;
$dark-pink: #d72756;
$green: #1caca3;
$dark-green: #30b0a1;
$blue: #21ace3;
$nav-links-top-offset: 20px;

body {
  font-family: "Arabic Typesetting", "Georgia", "Times New Roman", serif;
  font-size: 22px;
  //background-color: #fae6e7 !important;
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Arabic Typesetting", "Georgia", "Times New Roman", serif;
    font-weight: bold;
}

a {
  color: $dark-pink;
  text-decoration: none;
  &:visited {
    color: $dark-pink;
  }
  &:hover, &:focus {
    color: darken($dark-pink, 10%);
  }
}

#page-content {
  overflow: visible !important;
}

#landing-page-image {
  background-image: url({{'landing-splash.jpg' | asset_url}});
  height: 100vh;
}

// Navbar
#nav-link-container {
  text-align: center;
  margin-top: $nav-links-top-offset;
  nav {
    a {
      color: $green;
      font-weight: 300;
      font-size: 20px;
      line-height: 26px;
      margin: 0px !important;
      padding: 0 8px;
      border-right: solid 2px $light-pink;
      &:visited {
        color: $green;
      }
      &:hover {
        color: $green;
      }
    }

    a:first-child  {
      border-left: solid 2px $light-pink;
    }
  }
}

.minicart-wrapper {
  margin-top: $nav-links-top-offset;
  height: 31px;
  display: flex;
  align-items: center;
  .toggle-drawer.cart  {
    background-repeat: no-repeat;
    background-image: url({{'shopping-bag.png' | asset_url}});
  }
}

// Mobile nav {
#sidebar {
   text-align: center;
  margin-bottom: 30px;
}

// Header
.main-header-container {
  width: 100%;
  color: $dark-pink;
  text-align: center;
  text-transform: uppercase;
  .title {
    min-height: 40px;
    line-height: 40px;
    font-size: 50px;
    font-weight: bold;
    margin-bottom: 15px;
  }
  .subtitle {
    display: block;
    position: relative;
    z-index: 2;
    font-size: 15px;
    width: 140px;
    height: 18px;
    line-height: 20px;
    margin: auto;
    margin-bottom: -14px;
    background: white;
  }
  .top-border:after {
    content: " ";
    z-index: 1;
    display: block;
    position: relative;
    width: 100%;
    border-top: 1px solid $light-pink;
  }
  .bottom-border:after {
    content: " ";
    z-index: 1;
    display: block;
    position: relative;
    width: calc(100% - 40px);
    margin: 0 20px;
    height: 10px;
    border-bottom: 1px solid $light-pink;
  }
}

#product-search {
  text-align: right;
  form {
    margin: -55px 10px 55px 0;
  }
  #search-field {
    display: inline !important;
    border: 1px solid $light-pink !important;
    height: 21px;
    margin: -5px -5px 0 0;
  }
  #search-submit {
    border: 1px solid $light-pink;
    border-radius: 0;
    line-height: 10px;
    height: 21px;
    width: 21px;
    background: url({{ 'sprite.png' | asset_url }}) -9px -130px no-repeat !important;
    background-size: 11px 11px;
    border: 1px solid $light-pink !important;
    text-indent: -10000px;
    padding: 5px;
    margin: 0;
  }
}

// Footer
footer {
  background-image: url({{'bg_footer.png' | asset_url}});
  border: 1px solid $blue;
  border-left-width: 2px;
  border-right-width: 2px;
  h2 {
    margin-top: 10px;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
  }
  input[type="email"] {
    border: 1px solid $blue;
    border-radius: 0;
    display: inline-block;
    font-size: 16px;
  }
  input[type="submit"] {
    border: 1px solid $blue!important;
    background: $blue!important;
    margin-left: -4px;
    height: 30px;
    font-size: 16px;
    padding: 8px 10px;
    &:hover {
      background: $blue!important;
    }
  }
  form, input {
    margin-bottom: 0!important;
  }
  .row {
    margin-bottom: 5px;
  }
  .social-icons {
    text-align: right;
    img {
      width: 45px;
    }
  }
}

// Brands
#brands-page {
  ul {
    list-style-type: none;
    li {
      margin: 0px;
    }
  }
}

.brand-image-wrapper {
  padding: 10px;
  background-color: #f4d0da;
}

// Reviews
#reviews-container {
  li {
    display: inline-block;
  }
  #video-container {
    border: 2px solid $light-pink;
    padding: 20px 70px;
    .video-nav {
      content: " ";
      cursor: pointer;
      position: absolute;
      display: inline-block;
      background-size: 25px;
      width: 25px;
      height: 25px;
      top: calc(50% - 25px);
      &.previous {
        left: 15px;
        background-image: url({{ 'left-arrow.png' | asset_url}});
      }
      &.next {
        right: 15px;
        background-image: url({{ 'right-arrow.png' | asset_url}});
      }
    }
  }
  .video-description {
    margin-top: 10px;
    text-align: center;
    font-weight: bold;
  }
  .video-thumbnails {
    border-bottom: 1px solid $light-pink;
    padding-bottom: 20px;
    margin-bottom: 0;
  }
  .video-title {
    display: block;
    text-align: center;
    font-size: 34px;
    margin-top: 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid $light-pink;
  }
  .video-overlay {
    display: inline-block;
  }
}

// Paging
#paging {
  padding: 0 !important;
  .current {
    color: black !important;
  }
  a {
    color: $dark-pink;
    &:hover {
      color: $dark-pink;
      text-decoration: none;
    }
    &:visited {
      color: $dark-pink;
    }
  }
}

// Products
.product-grid-item a {
  color: black;
  &:hover {
    color: black;
    text-decoration: none;
  }
  &:visited {
    color: black;
  }
}

// Recommended
.recommended-grid-item a {
  color: black;
  &:hover {
    color: black;
    text-decoration: none;
  }
  &:visited {
    color: black;
  }

  .product-wrapper {
    font-weight: bold;
    padding: 5px 0 25px;
  }
  .product-title, .product-type {
    font-size: 22px;
  }
  .product-title {
    border-bottom: 1px solid $dark-green;
  }
}

// Collection
#default-collection-page {
  .upper-right-row {
    margin-bottom: 0;
  }
  .description {
    padding-top: 10px;
  }
}


// Collection sort
.sort-by-inline {
  color: $dark-pink;
  display: inline;
}

// Product item
#product-item-page {
  .left-column-wrapper {
    .row {
      margin-bottom: 0;
    }
    .images-wrapper {
      text-align: center;
      background-color: #d8dedb;
      padding: 20px;
    }
    #gallery {
      a {
        margin: 0;
        width: 100%;
      }
      > .row {
        padding-left: 12px;
        padding-right: 12px;
      }
      .gallery-image {
        padding: 3px;
      }
    }
  }

  .center-column-wrapper {
    h1 {
      margin-bottom: 5px;
      margin-top: 5px;
      padding-top: 0!important;
      &:first-child {
        margin-top: 20px;
        border-bottom: 2px solid $dark-green;
      }
    }
    .row {
      font-family: 'PT Sans', 'Helvetica Neue', sans-serif;
      font-size: 14px;
    }
    .subtitle {
      color: grey;
    }
    .details, .rating {
      font-size: 20px;
    }
    .description {
      border-bottom: 1px solid black;
    }
    #add {
      font-family: 'PT Sans', 'Helvetica Neue', sans-serif;
      background-color: inherit !important;
      border-color: $dark-green !important;
      padding: 15px 10px;
      margin: 0;
      margin-top: -20px;
      &:hover {
        color: black;
      }
      @media (max-width: 768px) {
        float: right;
      }
    }
  }

  .right-column-wrapper {
    text-align: center;
    h1:first-child {
      font-size: 22px;
      font-weight: bold;
      padding-top: 15px;;
      border-bottom: 2px solid $dark-green;
    }
  }
}

// Review form
.spr-form-title {
  font-size: 22px;
}
.spr-form-input {
  font-size: 22px!important;
}

// Bestsellers page
#bestsellers-page {
  min-height: 100vh;
  a {
    color: black;
    &:hover {
      color: black;
      text-decoration: none;
    }
    &:visited {
      color: black;
    }
  }
  .left-wrapper {
    padding-right: 0px;
    h1 {
      font-weight: normal;
      padding-bottom: 5px;
      border-bottom: 1px solid black;
    }
    .active {
      background-color: $light-pink;
    }
    .category-inline-block {
      display: inline-block;
    }
    .categories {
      font-size: 24px;
      padding: 10px 20px;
    }
    .categories.first-child {
      margin-top: 40px
    }
  }

  .right-wrapper {
    background-color: $light-pink;
    // Recommended
    .bestseller-item-row-wrapper {
      margin: 0px;
      padding: 0px;
      .bestseller-item-wrapper {
        margin: 30px;
        background-color: white;

        a {
          .product-wrapper {
            text-align: center;
            margin: 0px;
            .product-title {
              font-size: 22px;
              padding-bottom: 10px;
              border-bottom: 1px solid $light-pink;
            }

            .product-title-inline {
              display: inline-block;
            }
          }

        }
      }
    }
  }
}

#cart {
  font-family: 'PT Sans', sans-serif;
  font-size: 15px;
  .headers {
    border-top: 1px solid $light-pink !important;
    border-bottom: 1px solid $light-pink !important;
    font-size: 15px;
    font-weight: bold;
    font-style: normal;
    text-transform: uppercase;
    margin-bottom: 0;
  }
  .row {
    border-bottom: 1px solid $light-pink !important;
    margin-bottom: 0;
  }
  .cart-row {
    margin-top: 15px;
  }
  .price, .quantity, .total, .remove {
    input {
      font-size: 20px;
    }
  }
  .description {
    h3 {
      margin-top: 5px;
      &:first-child {
        border-bottom: 1px solid $green;
      }
    }
    > .row {
      border-bottom: 0 !important;
    }
    .subtitle {
      color: grey;
      font-size: 80%;
      padding: 5px 0;
    }
  }
  .bordered {
    border-left: 1px solid $light-pink !important;
    border-right: 1px solid $light-pink !important;
  }
  .smaller {
    margin-left: 10px;
    @media (max-width: 767px) {
      margin-left: 0;
    }
  }
  .cart-subtotal__note {
    font-size: 80%;
  }
  .right-column {
    h1, h2, h3, h4, h5, h6 {
      font-family: 'PT Sans', sans-serif;
    }
  }
  .total-wrapper {
    border-top: 1px solid $light-pink !important;
  }
  #note {
    margin-top: 25px;
  }
  .actions {
    text-align: center;
    input, a {
      display: inline-block;
      width: 80%;
      border: 1px solid $light-pink !important;
      padding: 10px 20px;
      margin-bottom: 10px;
      font-size: 12px;
      font-weight: bold;
      font-family: 'PT Sans', sans-serif;
      text-transform: uppercase;
      &:hover, &:focus {
        color: white !important;
        background: $light-pink !important;
        text-decoration: none;
      }
    }
    a {
      padding: 5px 20px;
    }
    #checkout {
      font-size: 16px;
      color: white;
      background: $light-pink !important;
      &:hover, &:focus {
        background: $dark-pink !important;
      }
    }
  }
  .extra {
    margin-top: 15px;
    font-size: 12px;
  }
}

// Awards page
#awards-page {
  padding-top: 50px;
  li {
    padding: 20px 0;
    a {
      color: black;
      text-decoration: none;
      &:hover {
        color: black;
        text-decoration: none;
      }
      &:visited {
        color: black;
        text-decoration: none;
      }

      &.active {
        color: $dark-pink;
        text-decoration: none;
      }
      &.active:hover {
        color: $dark-pink;
        text-decoration: none;
      }
      &.active:visited {
        color: $dark-pink;
        text-decoration: none;
      }
    }
  }
}

// Blogs page
.blog-category-title {
  text-decoration: underline;
  text-transform: uppercase;
}
.blog-category-list {
  li {
    margin-bottom: 5px;
  }
  a, span {
    font-weight: bold;
    text-transform: uppercase;
    display: inline-block;
    width: 100%;
    color: #333;
  }
  a:hover, a:focus {
    color: $dark-pink;
    text-decoration: none;
  }
  .active {
    color: $dark-pink;
    border-right: 4px solid $dark-pink;
  }
}
.post-preview {
  text-align: center;
  position: relative;
  a, a:hover, a:focus {
    text-decoration: none;
    color: #333;
  }
  .feature {
    height: 220px;
    &.text {
      border: 1px solid grey;
    }
    &.image {
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }
  }
  .feature-overlay {
    top: 0;
    position: absolute;
    width: 100%;
    height: 220px;
  }
  &:hover {
    .feature-overlay {
      background: rgba(0, 0, 0, 0.2);
    }
  }
  .title {
    display: inline-block;
    text-transform: uppercase;
    border-bottom: 1px solid $light-pink;
    font-size: 24px;
    line-height: 14px;
    margin-top: 3px;
  }
}
