$light-pink: #f3afc5;
$dark-green: #30b0a1;
$green: #1caca3;
$blue: #21ace3;
$dark-pink: #d72756;
$nav-links-top-offset: 20px;

body {
  background-color: #fae6e7 !important;
}

div.container.upper, div#page-content {
  border: none !important;
}

#landing-page-image {
  background-image: url({{'landing-splash.jpg' | asset_url}});
  height: 100vh;
}

// Navbar
#nav-link-container {
  margin-top: $nav-links-top-offset;
  nav {
    a {
      color: $green;
      font-size: 16px;
      margin: 0px !important;
      padding: 0 10px;
      border-right: solid 2px $light-pink;
      &:visited {
        color: $green;
      }
      &:hover {
        color: $green;
      }
    }

    a:first-child  {
      border-left: solid 2px $light-pink;
    }
  }
}

.minicart-wrapper {
  margin-top: $nav-links-top-offset;
  .toggle-drawer.cart  {
    background-repeat: no-repeat;
    background-image: url({{'shopping-bag.png' | asset_url}});
  }
}

// Header
.main-header-container {
  width: 100%;
  color: $dark-pink;
  text-align: center;
  text-transform: uppercase;
  .title {
    min-height: 40px;
    line-height: 40px;
    font-size: 50px;
    font-weight: bold;
    margin-bottom: 15px;
  }
  .subtitle {
    display: block;
    position: relative;
    z-index: 2;
    font-size: 11px;
    width: 140px;
    height: 20px;
    line-height: 20px;
    margin: auto;
    margin-bottom: -14px;
    background: white;
  }
  .top-border:after {
    content: " ";
    z-index: 1;
    display: block;
    position: relative;
    width: 100%;
    border-top: 1px solid $dark-pink;
  }
  .bottom-border:after {
    content: " ";
    z-index: 1;
    display: block;
    position: relative;
    width: calc(100% - 40px);
    margin: 0 20px;
    height: 10px;
    border-bottom: 1px solid $dark-pink;
  }
}


#product-search {
  text-align: right;
  form {
    margin: -55px 10px 55px 0;
  }
  #search-field {
    display: inline !important;
    border: 1px solid $light-pink !important;
    height: 21px;
    margin: -5px -5px 0 0;
  }
  #search-submit {
    border: 1px solid $light-pink;
    border-radius: 0;
    line-height: 10px;
    height: 21px;
    width: 21px;
    background: url({{ 'sprite.png' | asset_url }}) -9px -130px no-repeat !important;
    background-size: 11px 11px;
    border: 1px solid $light-pink !important;
    text-indent: -10000px;
    padding: 5px;
    margin: 0;
  }
}

#page-content {
  overflow: visible !important;
}

// Footer
footer {
  background-image: url({{'bg_footer.png' | asset_url}});
  border: 1px solid $blue;
  border-left-width: 2px;
  border-right-width: 2px;
  h2 {
    margin-top: 10px;
    font-size: 10px;
    font-weight: bold;
    text-transform: uppercase;
  }
  input[type="email"] {
    border: 1px solid $blue;
    border-radius: 0;
    display: inline-block;
  }
  input[type="submit"] {
    border: 1px solid $blue!important;
    background: $blue!important;
    margin-left: -4px;
    height: 27px;
    &:hover {
      background: $blue!important;
    }
  }
  form, input {
    margin-bottom: 0!important;
  }
  .row {
    margin-bottom: 10px;
  }
  .social-icons {
    text-align: right;
    img {
      width: 45px;
    }
  }
}

// Brands
#brands-page {
  ul {
    list-style-type: none;
    li {
      margin: 0px;
    }
  }
}

.brand-image-wrapper {
  padding: 10px;
  background-color: #f4d0da;
}

// Reviews
#reviews-container {
  li {
    display: inline-block;
  }
  #video-container {
    border: 2px solid $light-pink;
    padding: 20px 70px;
    .video-nav {
      content: " ";
      cursor: pointer;
      position: absolute;
      display: inline-block;
      background-size: 25px;
      width: 25px;
      height: 25px;
      top: calc(50% - 25px);
      &.previous {
        left: 15px;
        background-image: url({{ 'left-arrow.png' | asset_url}});
      }
      &.next {
        right: 15px;
        background-image: url({{ 'right-arrow.png' | asset_url}});
      }
    }
  }
  .video-description {
    margin-top: 10px;
    text-align: center;
    font-weight: bold;
  }
  .video-title {
    display: block;
    text-align: center;
    font-size: 22px;
    margin-top: 40px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid $light-pink;
  }
  .video-overlay {
    display: inline-block;
  }
}

// Paging
#paging {
  padding: 0 !important;
  .current {
    color: black !important;
  }
  a {
    color: $dark-pink;
    &:hover {
      color: $dark-pink;
      text-decoration: none;
    }
    &:visited {
      color: $dark-pink;
    }
  }
}

// Products
.product-grid-item a {
  color: black;
  &:hover {
    color: black;
    text-decoration: none;
  }
  &:visited {
    color: black;
  }
}

// Recommended
.recommended-grid-item a {
  color: black;
  &:hover {
    color: black;
    text-decoration: none;
  }
  &:visited {
    color: black;
  }

  .product-wrapper {
    padding: 20px 0;
  }
  .product-title, .product-type {
    font-size: 22px;
  }
  .product-title {
    border-bottom: 1px solid $dark-green;
  }
}

// Collection
.upper-right-row {
  margin-bottom: 0;
}

// Collection sort
.sort-by-inline {
  color: $dark-pink;
  display: inline;
}

// Product item
#product-item-page {
  .left-column-wrapper {
    background-color: #d8dedb;
    margin: 0px 40px;
    padding: 20px;
  }

  .center-column-wrapper {
    h1:first-child {
      padding-bottom: 10px;
      border-bottom: 2px solid $dark-green;
    }
    .subtitle {
      color: grey;
    }
    .details, .rating, .write-a-review {
      font-size: 20px;
    }
    .description {
      border-bottom: 1px solid black;
    }
    #add {
      color: grey;
      background-color: inherit !important;
      border-color: $dark-green !important;
      padding: 15px 10px;
      &:hover {
        color: black;
      }
    }
  }

  .right-column-wrapper {
    h1:first-child {
      padding-bottom: 10px;
      border-bottom: 2px solid $dark-green;
    }
  }


}
