$green-color: #1caca3;
$nav-links-top-offset: 20px;

// Landing Page

div.container.upper, div#page-content {
  border: none !important;
}

nav {
  a {
    color: $green-color;
    font-size: 16px;
    margin: 0px !important;
    padding: 0 10px;
    border-right: solid 2px pink;
    &:visited {
      color: $green-color;
    }
    &:hover {
      color: $green-color;
    }
  }

  a:first-child  {
    border-left: solid 2px pink;
  }
}

#nav-link-container {
  margin-top: $nav-links-top-offset;
}

.minicart-wrapper {
  margin-top: $nav-links-top-offset;
  .toggle-drawer.cart  {
    background-repeat: no-repeat;
    background-image: url({{'shopping-bag.png' | asset_url}});
  }
}

#landing-page-image {
  background-image: url({{'landing-splash.jpg' | asset_url}});
  height: 100vh;
}

// General

.main-header-wrapper-top {
  display: flex;
  text-align: center;
}

.main-header-wrapper-bottom {
  text-align: center;
}

.search-wrapper {
  display: flex;
  margin-right: 20px;
}

// #product-search {
//   float: right;
// }

#product-search form input.icon {
  float: left;
  background: url({{ 'sprite.png' | asset_url }}) -9px -130px no-repeat !important;
  width: 11px;
  height: 11px;
  border: none !important;
  text-indent: -10000px;
  padding: 0;
  margin: 5px 5px 0px 5px;
}

input.search {
  float: left;
  width: 130px;
  border: 1px solid pink;
  padding: 5px;
  margin-bottom: 0;
  margin-left: 5px;
  margin-top: -2px;
}

.main-header-label {
  width: 100%;
  line-height: 40px;
  font-size: 50px;
  font-weight: bold;
  text-transform: uppercase;
  color: #d72756;
}

.main-header-inline {
  display: inline;
}

.main-header-subtitle {
  color: #d72756;
}

.main-header-subtitle::after {
  border: 1px solid black;
}

#page-content {
  overflow: visible !important;
}

// Brands

.brand-image-wrapper {
  padding: 10px;
  background-color: #f4d0da;
}
